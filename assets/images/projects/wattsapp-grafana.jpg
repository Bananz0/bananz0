<svg xmlns="http://www.w3.org/2000/svg" width="1200" height="800" viewBox="0 0 1200 800">
  <defs>
    <linearGradient id="grad3" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:rgb(15,15,18);stop-opacity:1" />
      <stop offset="100%" style="stop-color:rgb(25,25,32);stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="800" fill="url(#grad3)"/>
  
  <!-- Grafana-style interface -->
  <rect x="0" y="0" width="1200" height="60" fill="rgba(18,18,18,0.95)"/>
  <text x="30" y="37" font-family="Space Grotesk, sans-serif" font-size="20" font-weight="700" fill="rgb(245, 158, 11)">Grafana</text>
  <text x="150" y="37" font-family="Inter, sans-serif" font-size="16" fill="rgba(229, 231, 235, 0.6)">/ WattsApp Telemetry</text>
  
  <!-- Time range selector -->
  <rect x="950" y="20" width="200" height="32" rx="4" fill="rgba(245, 158, 11, 0.1)" stroke="rgba(245, 158, 11, 0.3)" stroke-width="1"/>
  <text x="1050" y="41" font-family="JetBrains Mono, monospace" font-size="12" fill="rgb(245, 158, 11)" text-anchor="middle">Last 5 minutes</text>
  
  <!-- Panel 1: Temperature over time -->
  <rect x="30" y="90" width="560" height="320" rx="6" fill="rgba(18,18,18,0.9)" stroke="rgba(245, 158, 11, 0.2)" stroke-width="1"/>
  <text x="50" y="120" font-family="Inter, sans-serif" font-size="16" font-weight="600" fill="rgba(229, 231, 235, 0.9)">Temperature Monitor</text>
  
  <!-- Graph axes -->
  <line x1="70" y1="150" x2="70" y2="380" stroke="rgba(229, 231, 235, 0.2)" stroke-width="1"/>
  <line x1="70" y1="380" x2="560" y2="380" stroke="rgba(229, 231, 235, 0.2)" stroke-width="1"/>
  
  <!-- Y-axis labels -->
  <text x="62" y="160" font-family="JetBrains Mono, monospace" font-size="10" fill="rgba(229, 231, 235, 0.4)" text-anchor="end">30°C</text>
  <text x="62" y="220" font-family="JetBrains Mono, monospace" font-size="10" fill="rgba(229, 231, 235, 0.4)" text-anchor="end">25°C</text>
  <text x="62" y="280" font-family="JetBrains Mono, monospace" font-size="10" fill="rgba(229, 231, 235, 0.4)" text-anchor="end">20°C</text>
  <text x="62" y="340" font-family="JetBrains Mono, monospace" font-size="10" fill="rgba(229, 231, 235, 0.4)" text-anchor="end">15°C</text>
  <text x="62" y="385" font-family="JetBrains Mono, monospace" font-size="10" fill="rgba(229, 231, 235, 0.4)" text-anchor="end">10°C</text>
  
  <!-- Temperature line -->
  <polyline points="70,280 120,275 170,270 220,268 270,265 320,262 370,258 420,260 470,255 520,252 560,250"
            stroke="rgb(245, 158, 11)" stroke-width="3" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
  <polyline points="70,380 120,375 170,370 220,368 270,365 320,362 370,358 420,360 470,355 520,352 560,350 560,380 70,380"
            fill="rgba(245, 158, 11, 0.1)" stroke="none"/>
  
  <!-- Current value badge -->
  <rect x="470" y="110" width="100" height="30" rx="4" fill="rgba(245, 158, 11, 0.2)"/>
  <text x="520" y="130" font-family="JetBrains Mono, monospace" font-size="16" font-weight="700" fill="rgb(245, 158, 11)" text-anchor="middle">23.5°C</text>
  
  <!-- Panel 2: Voltage/Current -->
  <rect x="610" y="90" width="560" height="320" rx="6" fill="rgba(18,18,18,0.9)" stroke="rgba(245, 158, 11, 0.2)" stroke-width="1"/>
  <text x="630" y="120" font-family="Inter, sans-serif" font-size="16" font-weight="600" fill="rgba(229, 231, 235, 0.9)">Power Metrics</text>
  
  <!-- Graph axes -->
  <line x1="650" y1="150" x2="650" y2="380" stroke="rgba(229, 231, 235, 0.2)" stroke-width="1"/>
  <line x1="650" y1="380" x2="1140" y2="380" stroke="rgba(229, 231, 235, 0.2)" stroke-width="1"/>
  
  <!-- Y-axis labels -->
  <text x="642" y="160" font-family="JetBrains Mono, monospace" font-size="10" fill="rgba(229, 231, 235, 0.4)" text-anchor="end">6V</text>
  <text x="642" y="220" font-family="JetBrains Mono, monospace" font-size="10" fill="rgba(229, 231, 235, 0.4)" text-anchor="end">5V</text>
  <text x="642" y="280" font-family="JetBrains Mono, monospace" font-size="10" fill="rgba(229, 231, 235, 0.4)" text-anchor="end">4V</text>
  <text x="642" y="340" font-family="JetBrains Mono, monospace" font-size="10" fill="rgba(229, 231, 235, 0.4)" text-anchor="end">3V</text>
  
  <!-- Voltage line (stable ~5V) -->
  <polyline points="650,218 700,220 750,219 800,221 850,220 900,219 950,220 1000,219 1050,221 1100,220 1140,219"
            stroke="rgb(34, 211, 238)" stroke-width="3" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
  
  <!-- Current line (lower, green) -->
  <polyline points="650,300 700,298 750,302 800,299 850,301 900,300 950,298 1000,302 1050,299 1100,301 1140,300"
            stroke="rgb(16, 185, 129)" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
  
  <!-- Legend -->
  <rect x="1000" y="110" width="60" height="25" rx="3" fill="rgba(34, 211, 238, 0.2)"/>
  <line x1="1010" y1="122" x2="1035" y2="122" stroke="rgb(34, 211, 238)" stroke-width="2"/>
  <text x="1043" y="126" font-family="Inter, sans-serif" font-size="11" fill="rgba(229, 231, 235, 0.7)">Voltage</text>
  
  <rect x="1000" y="140" width="60" height="25" rx="3" fill="rgba(16, 185, 129, 0.2)"/>
  <line x1="1010" y1="152" x2="1035" y2="152" stroke="rgb(16, 185, 129)" stroke-width="2"/>
  <text x="1043" y="156" font-family="Inter, sans-serif" font-size="11" fill="rgba(229, 231, 235, 0.7)">Current</text>
  
  <!-- Panel 3: System Status -->
  <rect x="30" y="430" width="1140" height="330" rx="6" fill="rgba(18,18,18,0.9)" stroke="rgba(245, 158, 11, 0.2)" stroke-width="1"/>
  <text x="50" y="460" font-family="Inter, sans-serif" font-size="16" font-weight="600" fill="rgba(229, 231, 235, 0.9)">System Status & Telemetry</text>
  
  <!-- Status indicators -->
  <rect x="60" y="490" width="250" height="100" rx="4" fill="rgba(16, 185, 129, 0.1)" stroke="rgba(16, 185, 129, 0.3)" stroke-width="1"/>
  <circle cx="90" cy="520" r="8" fill="rgb(16, 185, 129)"/>
  <text x="110" y="526" font-family="Inter, sans-serif" font-size="14" fill="rgba(229, 231, 235, 0.8)">System Online</text>
  <text x="110" y="550" font-family="JetBrains Mono, monospace" font-size="12" fill="rgba(229, 231, 235, 0.5)">Uptime: 24h 37m</text>
  <text x="110" y="570" font-family="JetBrains Mono, monospace" font-size="12" fill="rgba(229, 231, 235, 0.5)">Response: 0.8ms</text>
  
  <rect x="330" y="490" width="250" height="100" rx="4" fill="rgba(34, 211, 238, 0.1)" stroke="rgba(34, 211, 238, 0.3)" stroke-width="1"/>
  <text x="360" y="520" font-family="Inter, sans-serif" font-size="14" fill="rgba(229, 231, 235, 0.8)">Data Rate</text>
  <text x="360" y="545" font-family="JetBrains Mono, monospace" font-size="24" font-weight="700" fill="rgb(34, 211, 238)">1000 Hz</text>
  <text x="360" y="572" font-family="JetBrains Mono, monospace" font-size="12" fill="rgba(229, 231, 235, 0.5)">Real-time sampling</text>
  
  <rect x="600" y="490" width="250" height="100" rx="4" fill="rgba(245, 158, 11, 0.1)" stroke="rgba(245, 158, 11, 0.3)" stroke-width="1"/>
  <text x="630" y="520" font-family="Inter, sans-serif" font-size="14" fill="rgba(229, 231, 235, 0.8)">InfluxDB</text>
  <text x="630" y="545" font-family="JetBrains Mono, monospace" font-size="20" font-weight="700" fill="rgb(245, 158, 11)">Connected</text>
  <text x="630" y="572" font-family="JetBrains Mono, monospace" font-size="12" fill="rgba(229, 231, 235, 0.5)">1.2M points stored</text>
  
  <rect x="870" y="490" width="250" height="100" rx="4" fill="rgba(245, 158, 11, 0.05)" stroke="rgba(245, 158, 11, 0.2)" stroke-width="1"/>
  <text x="900" y="520" font-family="Inter, sans-serif" font-size="14" fill="rgba(229, 231, 235, 0.8)">MCU Status</text>
  <text x="900" y="545" font-family="JetBrains Mono, monospace" font-size="16" fill="rgb(245, 158, 11)">ATMega644p</text>
  <text x="900" y="572" font-family="JetBrains Mono, monospace" font-size="12" fill="rgba(229, 231, 235, 0.5)">16MHz • 64KB Flash</text>
  
  <!-- Recent logs -->
  <text x="60" y="625" font-family="Inter, sans-serif" font-size="13" font-weight="600" fill="rgba(229, 231, 235, 0.7)">Recent Events</text>
  <text x="60" y="655" font-family="JetBrains Mono, monospace" font-size="11" fill="rgba(16, 185, 129, 0.7)">[12:45:23] Sensor poll complete - 0.8ms</text>
  <text x="60" y="680" font-family="JetBrains Mono, monospace" font-size="11" fill="rgba(34, 211, 238, 0.7)">[12:45:22] I2C transaction success</text>
  <text x="60" y="705" font-family="JetBrains Mono, monospace" font-size="11" fill="rgba(245, 158, 11, 0.7)">[12:45:21] UART buffer flushed</text>
  <text x="60" y="730" font-family="JetBrains Mono, monospace" font-size="11" fill="rgba(229, 231, 235, 0.5)">[12:45:20] ADC conversion complete</text>
  
  <!-- Refresh indicator -->
  <circle cx="1150" cy="35" r="8" fill="rgba(16, 185, 129, 0.3)">
    <animate attributeName="opacity" values="0.3;1;0.3" dur="2s" repeatCount="indefinite"/>
  </circle>
</svg>
